{
    "version": 2,
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/server.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/client/build/index.html"
      }
    ],
    "env": {
      "MONGO_URI": "mongodb+srv://urendacamila:urendacamilaMongo@clustermongodb.95vstra.mongodb.net/Pantapp",
      "NODE_ENV": "production",
      "VERCEL": "1"
    }
  }